class Solution:
    def reverse(self, x: int) -> int:
        sign = 1 if x >= 0 else -1
        x = abs(x)
        reversed_str = str(x)[::-1].lstrip('0')
        if not reversed_str:
            return 0
        result = sign * int(reversed_str)
        return result if -2**31 <= result <= 2**31 - 1 else 0
