class Solution:
    def convert(self, s: str, numRows: int) -> str:
        if numRows == 1: return s
        rows = [''] * numRows
        cur, d = 0, 1
        for c in s:
            rows[cur] += c
            cur += d
            if cur == 0 or cur == numRows - 1:
                d = -d
        return ''.join(rows)
